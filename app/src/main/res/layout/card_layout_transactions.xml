<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--ImageVIew to display our Course Image-->
        <!--<ImageView
            android:id="@+id/cardCancelationImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_credit_card_24" />-->

        <TextView
            android:id="@+id/txtTransactionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:drawablePadding="2dp"/>

        <TextView
            android:id="@+id/txtTransactionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTransactionInfo"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:drawablePadding="2dp"/>

        <TextView
            android:id="@+id/txtTransactionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTransactionDate"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:drawablePadding="2dp"/>

        <TextView
            android:id="@+id/txtAmountCancelation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@id/txtTransactionId"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
